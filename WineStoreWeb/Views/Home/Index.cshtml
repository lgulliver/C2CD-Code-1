@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="Red Wine" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Discover exciting red wines. Order to your home.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="White Wine" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    We have refreshing white wines on offer right now.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Big selection" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Our cellars offer a much larger selection than your local supermarket.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="Wine for any food" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Find the perfect match for your upcoming occasion. 
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-5">
		<h2>Welcome to Wine ONLINE</h2>
            <p>Please use the <b>"Shop"</b> option to start browsing.</p>
            <p>Once you are ready to place your order, click <b>"Trolley"</b>, and send us your order</p>
            <p>We will confirm your order over e-mail as soon as we receive it.</p>
    </div>
    <div class="col-md-5">
		<h3>More about this website...</h3>
        <p>This website is a demo, that has been created, to show how .NET core containers can work with each other. The solution is backed by Azure Storage and is designed to be deployed to Azure Linux AppServices.</p>
		<p>E-Mail services are provided by our non-code services.</p>
    </div>
</div>
